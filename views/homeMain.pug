extends base 

mixin specialoffer(chegirma,img,size)
  .product-offer.mb-30(style=`height:${size}px;`)
          img.img-fluid(src=`img/${img}` alt='')
          .offer-text
            h6.text-white.text-uppercase=`Special ${chegirma}%`
            h3.text-white.mb-3 Special Offer
            a.btn.btn-primary(href='/detail') Shop Now

mixin featured(lass,name)
  .col-lg-3.col-md-6.col-sm-12.pb-1
        .d-flex.align-items-center.bg-light.mb-4(style='padding: 30px;')
          h1(class=`fa ${lass} text-primary m-0 mr-3`)
          h5.font-weight-semi-bold.m-0=`${name}`

