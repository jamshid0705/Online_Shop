  // Featured Start
  .container-fluid.pt-5
    .row.px-xl-5.pb-3
      +featured('fa-check','Quality Product')    
      +featured('fa-shipping-fast',"Free Shipping")
      +featured("fa-exchange-alt",'14-Day Return')
      +featured('fa-phone-volume',"24/7 Support")    
  // Featured End
  // Categories Start
  .container-fluid.pt-5
    h2.section-title.position-relative.text-uppercase.mx-xl-5.mb-4
      span.bg-secondary.pr-3 Categories
    .row.px-xl-5.pb-3
      each categories in category
        .col-lg-3.col-md-4.col-sm-6.pb-1
          a.text-decoration-none(href=`/getidcategory/${categories.id}`)
            .cat-item.d-flex.align-items-center.mb-4
